{
  "id": "vertigo-evaluation",
  "title": "Vertigo Evaluation",
  "version": "1.0",
  "icd10": [
    "** R42 (Dizziness and giddiness)"
  ],
  "scope": "** Evaluation of acute and chronic vertigo including differentiation of peripheral vs central causes. Covers BPPV, vestibular neuritis, labyrinthitis, and Meniere's disease workup. Includes red flag identification for posterior circulation stroke. Excludes presyncope, orthostatic hypotension, and cardiac causes of dizziness.",
  "notes": [],
  "sections": {
    "Laboratory Workup": {
      "Essential/Core Labs": [
        {
          "item": "Glucose (fingerstick or serum)",
          "rationale": "Hypoglycemia can cause dizziness/lightheadedness mimicking vertigo",
          "target": "Normal (70-100 mg/dL)",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "ROUTINE",
          "ICU": "STAT"
        },
        {
          "item": "CBC",
          "rationale": "Rule out anemia (causes lightheadedness), infection (labyrinthitis)",
          "target": "Normal Hgb, WBC",
          "ED": "STAT",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE",
          "ICU": "STAT"
        },
        {
          "item": "BMP",
          "rationale": "Electrolyte disturbance can cause dizziness; assess renal function",
          "target": "Normal Na, K, glucose, creatinine",
          "ED": "STAT",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE",
          "ICU": "STAT"
        },
        {
          "item": "TSH",
          "rationale": "Thyroid dysfunction can cause vestibular symptoms",
          "target": "Normal (0.4-4.0 mIU/L)",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE",
          "ICU": "-"
        }
      ],
      "Extended Workup": [
        {
          "item": "HbA1c",
          "rationale": "Screen for diabetes if neuropathy suspected contributing to imbalance",
          "target": "<5.7% (normal); <7% (controlled DM)",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Vitamin B12",
          "rationale": "Deficiency causes peripheral neuropathy affecting balance",
          "target": ">300 pg/mL",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "RPR/VDRL",
          "rationale": "Neurosyphilis can cause vestibular symptoms",
          "target": "Nonreactive",
          "ED": "-",
          "HOSP": "EXT",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "ESR, CRP",
          "rationale": "Elevated in vasculitis, autoimmune inner ear disease",
          "target": "Normal ESR (<20 mm/hr), CRP (<3 mg/L)",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Lipid panel",
          "rationale": "Vascular risk assessment if central cause suspected",
          "target": "LDL <100 mg/dL; HDL >40 mg/dL",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE",
          "ICU": "-"
        }
      ],
      "Rare/Specialized": [
        {
          "item": "ANA, anti-dsDNA",
          "rationale": "Autoimmune inner ear disease (AIED) suspected",
          "target": "Negative",
          "ED": "-",
          "HOSP": "EXT",
          "OPD": "EXT",
          "ICU": "-"
        },
        {
          "item": "Anti-HSP70 antibody",
          "rationale": "Specific marker for autoimmune inner ear disease",
          "target": "Negative",
          "ED": "-",
          "HOSP": "-",
          "OPD": "EXT",
          "ICU": "-"
        },
        {
          "item": "Lyme serology",
          "rationale": "Endemic area with vestibular and facial nerve involvement",
          "target": "Negative",
          "ED": "-",
          "HOSP": "EXT",
          "OPD": "EXT",
          "ICU": "-"
        },
        {
          "item": "FTA-ABS",
          "rationale": "Confirmatory test if RPR positive; otosyphilis",
          "target": "Nonreactive",
          "ED": "-",
          "HOSP": "EXT",
          "OPD": "EXT",
          "ICU": "-"
        },
        {
          "item": "Genetic testing (COCH, MYO7A)",
          "rationale": "Familial vestibular disorders, Usher syndrome",
          "target": "No pathogenic variant",
          "ED": "-",
          "HOSP": "-",
          "OPD": "EXT",
          "ICU": "-"
        }
      ]
    },
    "Imaging & Studies": {
      "Essential/First-line": [
        {
          "item": "CT Head non-contrast",
          "timing": "Acute vertigo with concern for hemorrhage or when MRI unavailable",
          "target": "No hemorrhage, mass, or acute stroke",
          "contraindications": "Pregnancy (relative)",
          "ED": "STAT",
          "HOSP": "-",
          "OPD": "-",
          "ICU": "STAT"
        },
        {
          "item": "MRI Brain with DWI",
          "timing": "Central vertigo suspected; abnormal HINTS exam; risk factors for stroke",
          "target": "No acute infarct; normal brainstem/cerebellum",
          "contraindications": "MRI-incompatible devices, severe claustrophobia",
          "ED": "URGENT",
          "HOSP": "URGENT",
          "OPD": "ROUTINE",
          "ICU": "URGENT"
        },
        {
          "item": "MRA Head (Circle of Willis)",
          "timing": "Posterior circulation stroke suspected; vertebral/basilar stenosis",
          "target": "Patent posterior circulation; no stenosis",
          "contraindications": "MRI contraindications",
          "ED": "URGENT",
          "HOSP": "URGENT",
          "OPD": "ROUTINE",
          "ICU": "-"
        }
      ],
      "Extended": [
        {
          "item": "MRI Internal Auditory Canals (IAC) with contrast",
          "timing": "Unilateral hearing loss with vertigo; acoustic neuroma suspected",
          "target": "No vestibular schwannoma or CPA lesion",
          "contraindications": "Gadolinium allergy, severe CKD",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "CTA Head/Neck",
          "timing": "Vertebral dissection suspected; if MRA unavailable",
          "target": "No dissection; patent vertebral arteries",
          "contraindications": "Contrast allergy, CKD",
          "ED": "STAT",
          "HOSP": "URGENT",
          "OPD": "-",
          "ICU": "STAT"
        },
        {
          "item": "Audiometry",
          "timing": "Sensorineural hearing loss; Meniere's suspected",
          "target": "Symmetric hearing; low-frequency loss in Meniere's",
          "contraindications": "None",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Videonystagmography (VNG)",
          "timing": "Quantify vestibular function; localize peripheral lesion",
          "target": "Identify unilateral weakness; canal paresis",
          "contraindications": "Acute severe vertigo (defer until improved)",
          "ED": "-",
          "HOSP": "EXT",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Electrocochleography (ECoG)",
          "timing": "Meniere's disease confirmation",
          "target": "Elevated SP/AP ratio >0.4",
          "contraindications": "Recent ear surgery",
          "ED": "-",
          "HOSP": "-",
          "OPD": "EXT",
          "ICU": "-"
        }
      ],
      "Rare/Specialized": [
        {
          "item": "Vestibular evoked myogenic potentials (VEMP)",
          "timing": "Superior canal dehiscence; saccular function",
          "target": "Abnormal thresholds or amplitudes",
          "contraindications": "Hearing aids (remove first)",
          "ED": "-",
          "HOSP": "-",
          "OPD": "EXT",
          "ICU": "-"
        },
        {
          "item": "High-resolution CT temporal bones",
          "timing": "Superior canal dehiscence; cholesteatoma",
          "target": "Identify bony abnormalities",
          "contraindications": "Pregnancy",
          "ED": "-",
          "HOSP": "EXT",
          "OPD": "EXT",
          "ICU": "-"
        },
        {
          "item": "Rotary chair testing",
          "timing": "Bilateral vestibular loss; compensation assessment",
          "target": "Assess VOR gain and phase",
          "contraindications": "Severe vertigo (defer)",
          "ED": "-",
          "HOSP": "-",
          "OPD": "EXT",
          "ICU": "-"
        },
        {
          "item": "Video head impulse test (vHIT)",
          "timing": "Quantify VOR for each semicircular canal",
          "target": "Normal gain >0.8; refixation saccades",
          "contraindications": "None",
          "ED": "-",
          "HOSP": "EXT",
          "OPD": "ROUTINE",
          "ICU": "-"
        }
      ]
    },
    "Treatment": {
      "Acute/Emergent": [
        {
          "item": "Meclizine",
          "route": "PO",
          "indication": "Acute vertigo; vestibular suppressant",
          "dosing": {
            "doseOptions": [
              {
                "text": "25 mg PO",
                "orderSentence": "Meclizine 25 mg PO PO"
              },
              {
                "text": "25 mg TID",
                "orderSentence": "Meclizine 25 mg TID PO"
              },
              {
                "text": "50 mg TID",
                "orderSentence": "Meclizine 50 mg TID PO"
              }
            ],
            "route": "PO",
            "instructions": "25-50 mg PO q6-8h PRN vertigo; max 150 mg/day",
            "orderSentence": "Meclizine 25 mg PO PO"
          },
          "contraindications": "Glaucoma; urinary retention; elderly (fall risk)",
          "monitoring": "Sedation, anticholinergic effects",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Dimenhydrinate (Dramamine)",
          "route": "PO/IV",
          "indication": "Acute vertigo with significant nausea",
          "dosing": {
            "doseOptions": [
              {
                "text": "50 mg PO",
                "orderSentence": "Dimenhydrinate (Dramamine) 50 mg PO PO/IV"
              },
              {
                "text": "50 mg IV",
                "orderSentence": "Dimenhydrinate (Dramamine) 50 mg IV PO/IV"
              }
            ],
            "route": "PO/IV",
            "instructions": "50 mg PO q6h or 50 mg IV q6h PRN; max 400 mg/day",
            "orderSentence": "Dimenhydrinate (Dramamine) 50 mg PO PO/IV"
          },
          "contraindications": "Same as meclizine; IV form may cause hypotension",
          "monitoring": "Sedation, BP if IV",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Ondansetron",
          "route": "IV/PO",
          "indication": "Nausea/vomiting with acute vertigo",
          "dosing": {
            "doseOptions": [
              {
                "text": "4 mg IV",
                "orderSentence": "Ondansetron 4 mg IV IV/PO"
              },
              {
                "text": "8 mg PO",
                "orderSentence": "Ondansetron 8 mg PO IV/PO"
              },
              {
                "text": "4 mg ODT",
                "orderSentence": "Ondansetron 4 mg ODT IV/PO"
              }
            ],
            "route": "IV/PO",
            "instructions": "4 mg IV or 4-8 mg PO/ODT q8h PRN",
            "orderSentence": "Ondansetron 4 mg IV IV/PO"
          },
          "contraindications": "QT prolongation; severe hepatic impairment",
          "monitoring": "QTc if multiple doses or risk factors",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Promethazine",
          "route": "IV/IM/PO",
          "indication": "Severe nausea with acute vertigo",
          "dosing": {
            "doseOptions": [
              {
                "text": "12.5 mg IV",
                "orderSentence": "Promethazine 12.5 mg IV IV/IM/PO"
              },
              {
                "text": "25 mg IV",
                "orderSentence": "Promethazine 25 mg IV IV/IM/PO"
              },
              {
                "text": "25 mg PO",
                "orderSentence": "Promethazine 25 mg PO IV/IM/PO"
              }
            ],
            "route": "IV/IM/PO",
            "instructions": "12.5-25 mg IV/IM/PO q4-6h PRN; max 100 mg/day",
            "orderSentence": "Promethazine 12.5 mg IV IV/IM/PO"
          },
          "contraindications": "Respiratory depression; Parkinson's; children <2 years",
          "monitoring": "Sedation, respiratory status, dystonia",
          "ED": "URGENT",
          "HOSP": "URGENT",
          "OPD": "-",
          "ICU": "-"
        },
        {
          "item": "Lorazepam",
          "route": "IV/PO",
          "indication": "Severe acute vertigo refractory to antihistamines",
          "dosing": {
            "doseOptions": [
              {
                "text": "0.5 mg IV",
                "orderSentence": "Lorazepam 0.5 mg IV IV/PO"
              },
              {
                "text": "1 mg IV",
                "orderSentence": "Lorazepam 1 mg IV IV/PO"
              },
              {
                "text": "0.5 mg PO",
                "orderSentence": "Lorazepam 0.5 mg PO IV/PO"
              },
              {
                "text": "1 mg PO",
                "orderSentence": "Lorazepam 1 mg PO IV/PO"
              }
            ],
            "route": "IV/PO",
            "instructions": "0.5-1 mg IV/PO q8h PRN severe vertigo; short-term use only",
            "orderSentence": "Lorazepam 0.5 mg IV IV/PO"
          },
          "contraindications": "Respiratory depression; severe hepatic impairment; angle-closure glaucoma",
          "monitoring": "Sedation, respiratory status",
          "ED": "URGENT",
          "HOSP": "URGENT",
          "OPD": "-",
          "ICU": "-"
        },
        {
          "item": "Diazepam",
          "route": "PO",
          "indication": "Vestibular suppressant; more sedating",
          "dosing": {
            "doseOptions": [
              {
                "text": "2 mg PO",
                "orderSentence": "Diazepam 2 mg PO PO"
              },
              {
                "text": "5 mg PO",
                "orderSentence": "Diazepam 5 mg PO PO"
              }
            ],
            "route": "PO",
            "instructions": "2-5 mg PO q8-12h PRN vertigo; limit to 3-5 days",
            "orderSentence": "Diazepam 2 mg PO PO"
          },
          "contraindications": "Same as lorazepam",
          "monitoring": "Sedation, respiratory status",
          "ED": "URGENT",
          "HOSP": "URGENT",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "IV Normal Saline",
          "route": "IV",
          "indication": "Dehydration from vomiting",
          "dosing": {
            "doseOptions": [
              {
                "text": "1000 mL IV bolus",
                "orderSentence": "IV Normal Saline 1000 mL IV bolus IV"
              },
              {
                "text": "125 mL/hr IV",
                "orderSentence": "IV Normal Saline 125 mL/hr IV IV"
              }
            ],
            "route": "IV",
            "instructions": "1-2 L bolus then maintenance as needed",
            "orderSentence": "IV Normal Saline 1000 mL IV bolus IV"
          },
          "contraindications": "Heart failure; volume overload",
          "monitoring": "Intake/output, signs of overload",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT"
        }
      ],
      "Symptomatic Treatments": [
        {
          "item": "Epley maneuver (canalith repositioning)",
          "route": "Physical",
          "indication": "BPPV - posterior canal (most common)",
          "dosing": {
            "doseOptions": [
              {
                "text": "Perform once",
                "orderSentence": "Epley maneuver (canalith repositioning) Perform once Physical"
              },
              {
                "text": "may repeat x2 same session",
                "orderSentence": "Epley maneuver (canalith repositioning) may repeat x2 same session Physical"
              }
            ],
            "route": "Physical",
            "instructions": "Modified Epley: 5 positions held 30-60 sec each; may repeat if persistent nystagmus",
            "orderSentence": "Epley maneuver (canalith repositioning) Perform once Physical"
          },
          "contraindications": "Severe cervical spine disease; carotid stenosis (relative)",
          "monitoring": "Nystagmus resolution; post-maneuver restrictions controversial",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Semont maneuver",
          "route": "Physical",
          "indication": "BPPV - alternative to Epley",
          "dosing": {
            "doseOptions": [
              {
                "text": "Perform once",
                "orderSentence": "Semont maneuver Perform once Physical"
              }
            ],
            "route": "Physical",
            "instructions": "Side-lying liberatory maneuver; faster but more uncomfortable",
            "orderSentence": "Semont maneuver Perform once Physical"
          },
          "contraindications": "Same as Epley",
          "monitoring": "Nystagmus resolution",
          "ED": "URGENT",
          "HOSP": "URGENT",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Brandt-Daroff exercises",
          "route": "Physical",
          "indication": "BPPV - home exercise; residual symptoms",
          "dosing": {
            "doseOptions": [
              {
                "text": "Twice daily home exercise",
                "orderSentence": "Brandt-Daroff exercises Twice daily home exercise Physical"
              }
            ],
            "route": "Physical",
            "instructions": "Sit-to-side x5 each side, 30 sec holds, BID for 2 weeks",
            "orderSentence": "Brandt-Daroff exercises Twice daily home exercise Physical"
          },
          "contraindications": "Severe nausea (defer until improved)",
          "monitoring": "Symptom diary",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Lempert maneuver (BBQ roll)",
          "route": "Physical",
          "indication": "BPPV - horizontal canal variant",
          "dosing": {
            "doseOptions": [
              {
                "text": "Perform once",
                "orderSentence": "Lempert maneuver (BBQ roll) Perform once Physical"
              },
              {
                "text": "may repeat",
                "orderSentence": "Lempert maneuver (BBQ roll) may repeat Physical"
              }
            ],
            "route": "Physical",
            "instructions": "Serial 90-degree rolls toward unaffected ear (360 total)",
            "orderSentence": "Lempert maneuver (BBQ roll) Perform once Physical"
          },
          "contraindications": "Cervical spine disease",
          "monitoring": "Nystagmus resolution",
          "ED": "URGENT",
          "HOSP": "URGENT",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Prochlorperazine",
          "route": "IV/PO",
          "indication": "Vertigo with significant nausea",
          "dosing": {
            "doseOptions": [
              {
                "text": "10 mg IV",
                "orderSentence": "Prochlorperazine 10 mg IV IV/PO"
              },
              {
                "text": "10 mg PO",
                "orderSentence": "Prochlorperazine 10 mg PO IV/PO"
              }
            ],
            "route": "IV/PO",
            "instructions": "5-10 mg IV/PO q6-8h PRN; max 40 mg/day",
            "orderSentence": "Prochlorperazine 10 mg IV IV/PO"
          },
          "contraindications": "Parkinson's; QT prolongation; tardive dyskinesia history",
          "monitoring": "Akathisia, dystonia, QTc",
          "ED": "URGENT",
          "HOSP": "URGENT",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Scopolamine patch",
          "route": "Transdermal",
          "indication": "Motion sickness; prolonged vertigo episodes",
          "dosing": {
            "doseOptions": [
              {
                "text": "1 patch q72h",
                "orderSentence": "Scopolamine patch 1 patch q72h Transdermal"
              }
            ],
            "route": "Transdermal",
            "instructions": "Apply 1 patch behind ear; replace q72h; remove if symptoms resolve",
            "orderSentence": "Scopolamine patch 1 patch q72h Transdermal"
          },
          "contraindications": "Glaucoma; urinary retention; elderly",
          "monitoring": "Anticholinergic effects, dry mouth",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE",
          "ICU": "-"
        }
      ],
      "Second-line/Refractory": [
        {
          "item": "Methylprednisolone",
          "route": "PO",
          "indication": "Vestibular neuritis - may improve recovery",
          "dosing": {
            "doseOptions": [
              {
                "text": "100 mg daily x 3 days",
                "orderSentence": "Methylprednisolone 100 mg daily x 3 days PO"
              },
              {
                "text": "80 mg daily",
                "orderSentence": "Methylprednisolone 80 mg daily PO"
              },
              {
                "text": "60 mg daily",
                "orderSentence": "Methylprednisolone 60 mg daily PO"
              },
              {
                "text": "40 mg daily",
                "orderSentence": "Methylprednisolone 40 mg daily PO"
              },
              {
                "text": "20 mg daily",
                "orderSentence": "Methylprednisolone 20 mg daily PO"
              },
              {
                "text": "10 mg daily",
                "orderSentence": "Methylprednisolone 10 mg daily PO"
              }
            ],
            "route": "PO",
            "instructions": "100 mg daily x3 days, then taper over 3 weeks (total 22-day course)",
            "orderSentence": "Methylprednisolone 100 mg daily x 3 days PO"
          },
          "contraindications": "Active infection; uncontrolled diabetes; psychosis",
          "monitoring": "Glucose, BP, mood",
          "ED": "-",
          "HOSP": "URGENT",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Prednisone",
          "route": "PO",
          "indication": "Vestibular neuritis - alternative steroid",
          "dosing": {
            "doseOptions": [
              {
                "text": "60 mg daily",
                "orderSentence": "Prednisone 60 mg daily PO"
              },
              {
                "text": "40 mg daily",
                "orderSentence": "Prednisone 40 mg daily PO"
              },
              {
                "text": "20 mg daily",
                "orderSentence": "Prednisone 20 mg daily PO"
              }
            ],
            "route": "PO",
            "instructions": "1 mg/kg/day (max 60 mg) x 5 days, taper over 2 weeks",
