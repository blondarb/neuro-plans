          "indication": "Vestibular neuritis - if viral etiology suspected",
          "dosing": {
            "doseOptions": [
              {
                "text": "1000 mg TID x 7 days",
                "orderSentence": "Valacyclovir 1000 mg TID x 7 days PO"
              }
            ],
            "route": "PO",
            "instructions": "1000 mg PO TID x 7 days; most effective if started within 72 hrs",
            "orderSentence": "Valacyclovir 1000 mg TID x 7 days PO"
          },
          "contraindications": "Renal impairment (dose adjust)",
          "monitoring": "Renal function",
