          "route": "PO",
          "indication": "Meniere's disease - vestibular blood flow",
          "dosing": {
            "doseOptions": [
              {
                "text": "16 mg TID",
                "orderSentence": "Betahistine 16 mg TID PO"
              },
              {
                "text": "24 mg TID",
                "orderSentence": "Betahistine 24 mg TID PO"
              }
            ],
