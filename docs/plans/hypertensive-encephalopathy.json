    "Laboratory Workup": {
      "— Core Labs (Order for All Patients)": [
        {
          "item": "CBC with differential",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "Evaluate for MAHA (schistocytes), thrombocytopenia, infection"
        },
        {
          "item": "BMP (Na, K, Cl, CO₂, BUN, Cr, glucose)",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "Renal function (hypertensive nephropathy), electrolyte derangements"
        },
        {
          "item": "Urinalysis with microscopy",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "Proteinuria, hematuria, RBC casts (glomerulonephritis)"
        },
        {
          "item": "Troponin",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "Cardiac target organ damage (acute coronary syndrome)"
        },
        {
          "item": "PT/INR, aPTT",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "Coagulation status; DIC screen if MAHA present"
