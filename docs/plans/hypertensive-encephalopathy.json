    "Imaging & Studies": {
      "— Essential Imaging": [
        {
          "item": "CT head without contrast",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "First-line: rule out hemorrhagic stroke, large mass, hydrocephalus — fast availability in ED"
        },
        {
          "item": "MRI brain with/without contrast (DWI + FLAIR)",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "**Gold standard for PRES** — FLAIR hyperintensity in posterior parietal-occipital regions; DWI distinguishes vasogenic (PRES) from cytotoxic (infarct) edema; 15-20% have atypical distribution"
        },
        {
          "item": "ECG (12-lead)",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "LVH, ischemia, arrhythmia — cardiac target organ damage"
        },
        {
          "item": "Chest X-ray (PA/lateral)",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "Pulmonary edema, cardiomegaly, aortic widening (dissection)"
        },
        {
          "item": "Fundoscopic examination",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "**Critical** — papilledema, flame hemorrhages, cotton-wool spots, hard exudates = malignant hypertension; grade III-IV retinopathy"
        }
      ],
      "— Extended Imaging": [
        {
          "item": "CTA head and neck",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "If stroke is on differential — evaluate for large vessel occlusion or dissection"
        },
        {
          "item": "TTE (transthoracic echocardiography)",
          "ED": "URGENT",
          "HOSP": "URGENT",
          "OPD": "-",
          "ICU": "URGENT",
          "rationale": "LV function, wall motion abnormalities, LVH quantification"
        },
        {
          "item": "Renal ultrasound with Doppler",
          "ED": "URGENT",
          "HOSP": "ROUTINE",
          "OPD": "-",
          "ICU": "URGENT",
          "rationale": "Renal artery stenosis, asymmetric kidney size, chronic kidney disease"
        },
        {
          "item": "CTA/MRA renal arteries",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "-",
          "ICU": "ROUTINE",
          "rationale": "Fibromuscular dysplasia, renal artery stenosis — secondary cause"
        },
        {
          "item": "EEG (continuous)",
          "ED": "-",
          "HOSP": "URGENT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "If seizures or persistent altered consciousness — nonconvulsive status is common in PRES"
        }
      ],
      "— Rare/Specialized Studies": [
        {
          "item": "MR venography",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "-",
          "ICU": "ROUTINE",
          "rationale": "If PRES-like presentation with headache — exclude cerebral venous thrombosis"
        },
        {
          "item": "Catheter angiography",
          "ED": "-",
          "HOSP": "EXT",
          "OPD": "-",
          "ICU": "EXT",
          "rationale": "If vasculitis or vasospasm suspected (e.g., RCVS overlap)"
        },
        {
          "item": "CT/CTA aorta",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "If chest/back pain — aortic dissection with hypertensive emergency"
        },
        {
          "item": "Adrenal CT/MRI",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "-",
          "ICU": "ROUTINE",
          "rationale": "Pheochromocytoma, adrenal adenoma (Conn syndrome)"
        },
        {
          "item": "Lumbar puncture",
          "ED": "-",
          "HOSP": "EXT",
          "OPD": "-",
          "ICU": "EXT",
          "rationale": "Only if meningitis/encephalitis suspected and safe to perform — not typically needed for hypertensive encephalopathy"
        }
      ]
    },
    "Treatment": {
      "— Acute / Emergency Treatment (ED and ICU)": [
        {
          "item": "Nicardipine IV infusion",
          "route": "IV",
          "indication": "First-line IV antihypertensive for hypertensive emergency including PRES",
          "dosing": {
            "doseOptions": [
              {
                "text": "5 mg/hr",
                "orderSentence": "Nicardipine IV infusion 5 mg/hr IV"
              }
            ],
            "route": "IV",
            "instructions": "start 5 mg/hr, titrate by 2.5 mg/hr every 5-15 min, max 15 mg/hr",
            "orderSentence": "Nicardipine IV infusion 5 mg/hr IV"
          },
          "contraindications": "—",
          "monitoring": "Continuous arterial BP monitoring; MAP trend; neurological status",
          "ED": "STAT",
          "HOSP": "-",
          "OPD": "-",
          "ICU": "STAT"
        },
        {
          "item": "Labetalol IV",
          "route": "IV",
          "indication": "First-line alternative IV antihypertensive; combined alpha/beta blockade",
          "dosing": {
            "doseOptions": [
              {
                "text": "20 mg",
                "orderSentence": "Labetalol IV 20 mg IV"
              }
            ],
            "route": "IV",
            "instructions": "may repeat 40-80 mg every 10 min (max 300 mg total); or infusion 0.5-2 mg/min",
            "orderSentence": "Labetalol IV 20 mg IV"
          },
          "contraindications": "Severe bradycardia; heart block; decompensated HF; cocaine-induced hypertension (use nicardipine instead)",
          "monitoring": "Heart rate; BP; cardiac rhythm",
          "ED": "STAT",
          "HOSP": "-",
          "OPD": "-",
          "ICU": "STAT"
        },
        {
          "item": "Clevidipine IV",
          "route": "IV",
          "indication": "Ultra-short acting CCB for precise BP control",
          "dosing": {
            "doseOptions": [
              {
                "text": "1-2 mg/hr",
                "orderSentence": "Clevidipine IV 1-2 mg/hr IV"
              }
            ],
            "route": "IV",
            "instructions": "titrate by doubling dose every 90 sec initially, then increase by 1-2 mg/hr; max 32 mg/hr",
            "orderSentence": "Clevidipine IV 1-2 mg/hr IV"
          },
          "contraindications": "Soy/egg allergy; pancreatitis",
          "monitoring": "Continuous BP monitoring; triglycerides (lipid emulsion)",
          "ED": "STAT",
          "HOSP": "-",
          "OPD": "-",
          "ICU": "STAT"
