        {
          "item": "Peripheral blood smear",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "Schistocytes — microangiopathic hemolytic anemia"
        },
        {
          "item": "BNP or NT-proBNP",
          "ED": "STAT",
          "HOSP": "URGENT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "Heart failure assessment"
        },
        {
          "item": "Urine drug screen",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "-",
          "ICU": "STAT",
          "rationale": "Sympathomimetics (cocaine, amphetamines) as precipitant"
        },
        {
          "item": "Pregnancy test (females of childbearing age)",
