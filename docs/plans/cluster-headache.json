            "doseOptions": [
              {
                "text": "100%",
                "orderSentence": "High-flow oxygen 100% INH"
              }
            ],
            "route": "INH",
            "instructions": "100% O2 at 12-15 L/min via non-rebreather mask × 15-20 min; can repeat",
            "orderSentence": "High-flow oxygen 100% INH"
          },
          "contraindications": "None; safe in COPD for acute use",
          "monitoring": "O2 sat; usually aborts attack in 15 min",
          "ED": "STAT",
          "HOSP": "STAT",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
