    "Treatment": {
      "First-Line Immunotherapy": [
        {
          "item": "IVIG (Intravenous Immunoglobulin)",
          "route": "IV",
          "indication": "-",
          "dosing": {
            "doseOptions": [
              {
                "text": "2 g/kg",
                "orderSentence": "IVIG (Intravenous Immunoglobulin) 2 g/kg PO"
              }
            ],
            "route": "PO",
            "instructions": "Induction: 2 g/kg divided over 2-5 days; Maintenance: 0.4-1 g/kg q3-4 weeks (adjust based on response)",
            "orderSentence": "IVIG (Intravenous Immunoglobulin) 2 g/kg PO"
          },
          "contraindications": "IgA deficiency (use IgA-depleted product), renal failure, thrombosis history",
          "monitoring": "Renal function, headache, aseptic meningitis, thrombosis",
          "ED": "-",
          "HOSP": "STAT",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "SCIG (Subcutaneous Immunoglobulin)",
          "route": "SC",
          "indication": "-",
          "dosing": {
            "instructions": "Convert from IVIG at equivalent weekly dose (total monthly IVIG dose ÷ 4); administer weekly",
            "orderSentence": "SCIG (Subcutaneous Immunoglobulin) - SC - see dosing"
          },
          "contraindications": "Same (fewer systemic reactions)",
          "monitoring": "Local site reactions",
          "ED": "-",
          "HOSP": "-",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Plasma exchange (PLEX)",
          "route": "-",
          "indication": "-",
          "dosing": {
            "instructions": "5-7 exchanges over 2-3 weeks; 1-1.5 plasma volumes/exchange",
            "orderSentence": "Plasma exchange (PLEX) - - - see dosing"
          },
          "contraindications": "Hemodynamic instability, line access",
          "monitoring": "Hemodynamics, electrolytes (Ca, Mg), fibrinogen",
