      "Patient Instructions": [
        {
          "item": "CIDP is a chronic condition requiring ongoing treatment; not curable but manageable",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE"
        },
        {
          "item": "IVIG infusions will be needed regularly (typically monthly)",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE"
        },
        {
          "item": "Report any worsening weakness, numbness, or falls immediately",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE"
        },
        {
          "item": "Do NOT stop immunotherapy abruptly without physician guidance",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE"
        },
        {
          "item": "Fall prevention: remove rugs, improve lighting, use assistive devices",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE"
        },
        {
