    "Treatment": {
      "First-Line Pharmacologic Treatment": [
        {
          "item": "Propranolol (Inderal)",
          "route": "PO",
          "indication": "First-line beta-blocker for essential tremor suppression",
          "dosing": {
            "doseOptions": [
              {
                "text": "20-40 mg",
                "orderSentence": "Propranolol (Inderal) 20-40 mg PO"
              }
            ],
            "route": "PO",
            "instructions": "Start 20-40 mg BID-TID; titrate to 120-320 mg/day in divided doses",
            "orderSentence": "Propranolol (Inderal) 20-40 mg PO"
          },
          "contraindications": "Asthma, COPD, bradycardia, AV block, decompensated heart failure, depression",
          "monitoring": "HR, BP",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE",
          "ICU": "-"
        },
        {
          "item": "Propranolol LA",
