          "dosing": {
            "doseOptions": [
              {
                "text": "60-80 mg",
                "orderSentence": "Propranolol LA 60-80 mg PO"
              }
            ],
            "route": "PO",
            "instructions": "Start 60-80 mg daily; titrate to 160-320 mg daily",
            "orderSentence": "Propranolol LA 60-80 mg PO"
          },
          "contraindications": "Same",
          "monitoring": "Same",
          "ED": "-",
          "HOSP": "ROUTINE",
          "OPD": "ROUTINE",
          "ICU": "-"
